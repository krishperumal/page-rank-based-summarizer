<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app xmlns="http://java.sun.com/xml/ns/javaee" version="2.5">
    <servlet>
        <servlet-name>summarizer</servlet-name>
        <servlet-class>summarizer.SummarizerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>summarizer</servlet-name>
        <url-pattern>/summarizer</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>summarizer.jsp</welcome-file>
    </welcome-file-list>
</web-app>
